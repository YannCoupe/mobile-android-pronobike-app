<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/main_parent">

    <android.support.v7.widget.Toolbar
        style="@style/main_toolbar">

        <RelativeLayout style="@style/main_navbar_container">

            <ImageView style="@style/main_navbar_logo" />

            <LinearLayout style="@style/main_navbar_tab_container">

                <android.support.design.widget.TabLayout style="@style/main_navbar_tablayout" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <View style="@style/main_top_bar_separator"/>

    <RelativeLayout style="@style/main_content">

        <android.support.v4.view.ViewPager style="@style/main_viewpager" />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            style="@style/main_fab_menu">

            <com.getbase.floatingactionbutton.FloatingActionButton
                style="@style/main_fab_rules"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                style="@style/main_fab_join"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                style="@style/main_fab_create"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </RelativeLayout>

</LinearLayout>
