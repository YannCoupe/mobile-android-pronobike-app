<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="join_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="join_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="join_fragment_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/join_fragment_container</item>
    </style>

    <style name="join_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="join">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="join_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/renseigner_token</item>
    </style>

    <style name="join_edittext" parent="auth_edittext">
        <item name="android:hint">@string/token</item>
        <item name="android:inputType">text</item>
        <item name="android:id">@id/join_edittext</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
    </style>

    <style name="join_loader_parent" parent="auth_parent">
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:id">@id/join_loader</item>
    </style>

    <style name="join_button_send">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/padding</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/green_1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/rejoindre</item>
        <item name="android:id">@id/join_button_send</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
    </style>

</resources>
