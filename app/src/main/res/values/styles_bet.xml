<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Game -->
    <style name="bet_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="bet_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="bet_fragment_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/bet_fragment_container</item>
    </style>

    <style name="bet_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="bet_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/choisissez_podium</item>
    </style>

    <style name="bet_button_send">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">@dimen/padding</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/green_1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/envoyer</item>
        <item name="android:id">@id/bet_button_send</item>
    </style>

    <style name="bet_rank_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/padding</item>
        <item name="android:layout_marginRight">@dimen/padding</item>
        <item name="android:background">@drawable/background_rank</item>
    </style>

    <style name="bet_rank_first" parent="bet_rank_textview">
        <item name="android:id">@id/bet_rank_first</item>
        <item name="android:text">@string/position_1er</item>
    </style>

    <style name="bet_rank_second" parent="bet_rank_textview">
        <item name="android:id">@id/bet_rank_second</item>
        <item name="android:text">@string/position_2eme</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
    </style>

    <style name="bet_rank_third" parent="bet_rank_textview">
        <item name="android:id">@id/bet_rank_third</item>
        <item name="android:text">@string/position_3eme</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
    </style>

